<h1>Add a new exercise</h1>

<%= form_tag "/exercises", method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :muscle, "Muscle Worked" %>
    <%= text_field_tag :muscle %>
  </div>
  <div>
    <%= label_tag :equipment, "Equipment Type" %>
    <%= text_field_tag :equipment %>
  </div>
  <div>
    <%= label_tag :level %>
    <%= text_field_tag :level %>
  </div>
  <div>
    <%= label_tag :instruction, "Instructions" %>
    <%= text_field_tag :instruction %>
  </div>
  <div>
    <%= submit_tag "Add Exercise" %>
  </div>
<% end %>