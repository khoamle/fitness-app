<h1>Edit exercise</h1>

<%= form_tag "/exercises/#{@exercise.id}", method: :patch do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @exercise.name%>
  </div>
  <div>
    <%= label_tag :muscle, "Muscle Worked" %>
    <%= text_field_tag :muscle, @exercise.muscle%>
  </div>
  <div>
    <%= label_tag :equipment, "Equipment Type" %>
    <%= text_field_tag :equipment, @exercise.equipment%>
  </div>
  <div>
    <%= label_tag :level %>
    <%= text_field_tag :level, @exercise.level%>
  </div>
  <div>
    <%= label_tag :instruction, "Instructions" %>
    <%= text_area_tag :instruction, @exercise.instruction%>
  </div>
  <div>
    <%= label_tag :image_1 %>
    <%= text_field_tag :image_1, @exercise.images.first.image_url%>
  </div>
  <div>
    <%= label_tag :image_2 %>
    <%= text_field_tag :image_2, @exercise.images.last.image_url%>
  </div>
  <div>
    <%= submit_tag "Update Exercise" %>
  </div>
<% end %>