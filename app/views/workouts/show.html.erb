<div ng-app="app">
  <div ng-controller="exerciseTimesCtrl" ng-init="setup(<%= params[:id] %>)">


    <section id="clients" class="container">
      <div class="inner team">
        <h1 class="header light gray3 fancy"><span class="colored">My </span> Exercises <span class="colored">For </span><%= @workout.name %></h1>
      </div>
    </section>

    <div class="row">
      <div class="col-md-6"
        <li ng-repeat="exercise in workout.exercises">
          <h3>Name: {{ exercise.name }}</h3>
          <ul>
            <li ng-repeat="image in exercise.images">
              <img ng-src="{{image.image.image.url }}">
            </li>


            <h3>Choose workout time?</h3>
            <div>
              Selected Date: {{ data.date | date:'MM-dd-yyyy HH:mm' }}
            </div>
            <br>

            Click below to select a date

            <div class="dropdown">
              <a class="dropdown-toggle my-toggle-select" id="dLabel" role="button" data-toggle="dropdown" data-target="#" href="">
                <div class="input-append"><input type="text" class="input-large" data-ng-model="data.date"><span class="add-on"><i
                  class="icon-calendar"></i></span>
                </div>
              </a>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <datetimepicker data-ng-model="data.date"
                data-datetimepicker-config="{ dropdownSelector: '.my-toggle-select' }"></datetimepicker>
              </ul>
            </div>

            <div>
              Title: <input type="title" ng-model="newTitle">
            </div>  
            <button ng-click="addEvent(data.date, newTitle, exercise.id)">Add to Calendar</button>
            <br><br><br>
            </li>
          </ul>
      </div>        
    </div>
    <hr>

    <div class="row">
      <div class="col-md-6">
        <div ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources"></div>
      </div> 

      <div class="col-md-6">
        <ul class="unstyled">
          <li ng-repeat="e in events" class="ng-scope">
            <div class="alert alert-info">
              <a class="close" ng-click="remove($index)"><i class="icon-remove"></i></a>
              <b> {{e.title}}</b> - {{e.start | date:"MMM dd"}}
            </div>
          </li>
        </ul>
      </div>
    </div>


  </div>
</div>


