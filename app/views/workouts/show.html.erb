<div ng-app="app">
  <div ng-controller="exerciseTimesCtrl" ng-init="setup(<%= params[:id] %>)">

    <section id="clients" class="container">
      <div class="inner team">
        <h1 class="header light gray3 fancy"><span class="colored">My </span> Exercises <span class="colored">For </span><%= @workout.name %></h1>
      </div>
    </section>

    <div class="row">
      <div ng-repeat="exercise in workout.workout_exercises">
      <div class="col-md-3">
        <h3>Name: {{ exercise.name }}</h3>
        <h3>Sets: {{ exercise.sets }}</h3>
        <h3>Reps: {{ exercise.reps}}</h3>
        <ul>
          <li ng-repeat="image in exercise.images">
            <img height="250" width="250" ng-src="{{image.image.image.url }}">
          </li>


          <h3>Choose workout date and time?</h3>
          <!-- <div>
            Selected Date: {{ data.date | date:'MM-dd-yyyy HH:mm' }}
          </div> -->
          
          Click below to select a date

          <div class="dropdown">
            <a class="dropdown-toggle" id="dropdown2" role="button" data-toggle="dropdown" data-target="#" href="#">
              <div class="input-group"><input type="text" class="form-control" data-ng-model="data.date"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
              </div>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <datetimepicker data-ng-model="data.date" data-datetimepicker-config="{ dropdownSelector: '#dropdown2' }"/>
            </ul>
          </div><br>

          <button ng-click="addEvent(data.date, exercise.name, exercise.id)">Add to Calendar</button>
          <br><br><br>
        </ul>
      </div>
    </div>        
  </div>
  <hr>

  <div class="row">
    <div class="col-md-4">
      <h2>Workout Schedule</h2>
      <ul class="unstyled">
        <li ng-repeat="event in events" class="ng-scope">
          <div class="alert alert-info">
            <a class="close" ng-click="remove($index, event)">
            <button type="button" class="icon-remove" data-dismiss="modal" aria-hidden="true">&times;</button></a>
            <div>{{ event.title}}</div>
            <div>{{event.start | date:"MMM dd hh:mm a"}}</div>
          </div>
        </li>
      </ul>
    </div>
    <div class="col-md-8">
      <div ui-calendar="uiConfig.calendar" class="span8 calendar" ng-model="eventSources"></div>
    </div>
  </div>
</div>


</div>
</div>


