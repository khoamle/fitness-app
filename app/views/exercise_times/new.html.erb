<h1>Add a workout time</h1>

<%= form_tag "/exercise_times", method: :post do %>
  <div>
    <%= label_tag :time %>
    <%= text_field_tag :time %>
  </div>
  <%= hidden_field_tag :exercise_id %>
  <div>
    <%= label_tag :day_of_the_week %>
    <%= collection_select :day_of_the_week, :day_id, DaysOfWeek.all, :id, :day  %>
  </div>
  <div>
    <%= submit_tag "Create Exercise Time" %>
  </div>
<% end %>